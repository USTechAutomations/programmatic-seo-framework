# =============================================================================
# Programmatic SEO Framework - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control
# =============================================================================

# -----------------------------------------------------------------------------
# AI Content Generation
# -----------------------------------------------------------------------------

# Anthropic API Key (for cloud-based generation)
ANTHROPIC_API_KEY=sk-ant-api03-xxxxx

# OpenAI API Key (optional, for alternative cloud generation)
OPENAI_API_KEY=sk-xxxxx

# -----------------------------------------------------------------------------
# Local LLM (Ollama) Configuration
# -----------------------------------------------------------------------------

# Ollama server URL (default: http://localhost:11434)
OLLAMA_URL=http://localhost:11434

# Default Ollama model for content generation
# Recommended models:
#   - nemotron-3-nano:30b-a3b-fp16 (premium, requires 64GB+ VRAM)
#   - qwen2.5:7b-instruct (balanced, ~8GB VRAM)
OLLAMA_MODEL=qwen2.5:7b-instruct

# Use local Ollama instead of cloud APIs (true/false)
USE_LOCAL_LLM=true

# -----------------------------------------------------------------------------
# Site Configuration
# -----------------------------------------------------------------------------

# Your production site URL (no trailing slash)
NEXT_PUBLIC_SITE_URL=https://www.ustechautomations.com

# Site name for metadata
NEXT_PUBLIC_SITE_NAME="US Tech Automations"

# -----------------------------------------------------------------------------
# Deployment (Vercel)
# -----------------------------------------------------------------------------

# Vercel deployment tokens (if using Vercel)
VERCEL_TOKEN=
VERCEL_ORG_ID=
VERCEL_PROJECT_ID=

# -----------------------------------------------------------------------------
# Deployment (Netlify)
# -----------------------------------------------------------------------------

# Netlify deployment tokens (if using Netlify)
NETLIFY_AUTH_TOKEN=
NETLIFY_SITE_ID=

# -----------------------------------------------------------------------------
# Deployment (AWS)
# -----------------------------------------------------------------------------

# AWS credentials (if deploying to S3/CloudFront)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET=
CLOUDFRONT_DISTRIBUTION_ID=

# -----------------------------------------------------------------------------
# SEO Tools Integration (Optional)
# -----------------------------------------------------------------------------

# Ahrefs API (for keyword research)
AHREFS_API_KEY=

# SEMrush API (for competitor analysis)
SEMRUSH_API_KEY=

# Google Search Console (for performance data)
GOOGLE_SEARCH_CONSOLE_SITE=

# -----------------------------------------------------------------------------
# Analytics (Optional)
# -----------------------------------------------------------------------------

# Google Analytics 4
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Plausible Analytics
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=

# -----------------------------------------------------------------------------
# Content Quality
# -----------------------------------------------------------------------------

# Minimum uniqueness score to pass validation (0-1)
MIN_UNIQUENESS_SCORE=0.75

# Minimum quality score to pass validation (0-1)
MIN_QUALITY_SCORE=0.80

# Require human review before publishing
REQUIRE_HUMAN_REVIEW=true
